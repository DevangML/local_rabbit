{
  "name": "local_rabbit",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:client": "cd packages/client && vite build",
    "build:client:ssr": "cd packages/client && vite build --ssr src/entry-server.tsx --outDir dist/server",
    "build:server": "cd packages/server && yarn build",
    "build": "yarn build:client && yarn build:client:ssr && yarn build:server",
    "dev:client": "cd packages/client && vite build --watch",
    "dev:server": "cd packages/server && tsx watch src/server.ts",
    "dev": "concurrently \"yarn dev:client\" \"yarn dev:server\"",
    "start": "cd packages/server && yarn start",
    "clean": "rimraf packages/*/dist",
    "lint": "yarn workspaces run lint",
    "lint:fix": "yarn workspaces run lint:fix",
    "lint:quiet": "yarn workspaces run lint:quiet"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "morgan": "^1.10.0",
    "prismjs": "^1.29.0",
    "react-markdown": "^10.0.1",
    "remark-gfm": "^4.0.1"
  }
}