{
  "name": "local-coderabbit",
  "version": "1.0.0",
  "description": "Local PR review tool with advanced analysis",
  "main": "server/index.js",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "simple-git": "^3.22.0",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "jscodeshift": "^0.15.1",
    "escomplex": "^2.0.0-alpha",
    "eslint": "^8.56.0",
    "diff": "^5.1.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.3"
  }
}
