{
  "name": "local-coderabbit",
  "version": "1.0.0",
  "description": "Local PR review tool with advanced analysis",
  "main": "server/index.js",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "start": "concurrently \"yarn server\" \"yarn client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && yarn start",
    "build": "cd client && yarn build",
    "install-all": "yarn install && cd client && yarn install",
    "security-audit": "bash security_audit.sh",
    "security-fix": "yarn audit fix && cd client && yarn audit fix && cd ../server && yarn audit fix",
    "update-deps": "yarn upgrade-interactive --latest",
    "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('yarn') === -1) throw new Error('Please use Yarn instead of NPM')\"",
    "postinstall": "yarn security-audit"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "diff": "^5.1.0",
    "escomplex": "^2.0.0-alpha",
    "eslint": "^8.56.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "idb": "^8.0.2",
    "jscodeshift": "^0.15.1",
    "morgan": "^1.10.0",
    "simple-git": "^3.27.0"
  },
  "devDependencies": {
    "audit-ci": "^6.6.1",
    "concurrently": "^8.2.2",
    "eslint-plugin-security": "^2.1.0",
    "fake-indexeddb": "^4.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "snyk": "^1.1250.0"
  },
  "resolutions": {
    "semver": "^7.5.4",
    "xml2js": "^0.5.0",
    "tough-cookie": "^4.1.3"
  }
}
