{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Development",
      "dependsOn": ["Start Client", "Start Server"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Start Client",
      "type": "shell",
      "command": "cd client && yarn dev",
      "isBackground": true,
      "problemMatcher": {
        "owner": "client",
        "fileLocation": ["relative", "${workspaceFolder}/client"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error|info)\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^VITE.*started",
          "endsPattern": "^VITE.*ready"
        }
      }
    },
    {
      "label": "Start Server",
      "type": "shell",
      "command": "cd server && yarn dev",
      "isBackground": true,
      "problemMatcher": {
        "owner": "server",
        "fileLocation": ["relative", "${workspaceFolder}/server"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error|info)\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    },
    {
      "label": "Run ESLint (Watch Mode)",
      "type": "shell",
      "command": "./run.sh lint-vscode",
      "isBackground": true,
      "problemMatcher": [
        {
          "owner": "eslint-client",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": {
            "regexp": "^(.+):(\\d+):(\\d+):\\s+(warning|error)\\s+(.+)\\s+\\[(.+)\\]$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5,
            "code": 6
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Starting client linting in watch mode...",
            "endsPattern": "Watching for changes..."
          }
        },
        {
          "owner": "eslint-server",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": {
            "regexp": "^(.+):(\\d+):(\\d+):\\s+(warning|error)\\s+(.+)\\s+\\[(.+)\\]$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5,
            "code": 6
          }
        }
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "showReuseMessage": false,
        "clear": true,
        "focus": false
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Start Development with Linting",
      "dependsOn": ["Start Client", "Start Server", "Run ESLint (Watch Mode)"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    }
  ]
}
