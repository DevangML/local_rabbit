{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clear-debug",
      "type": "shell",
      "command": "pkill -f node || true && pkill -f Chrome || true && rm -rf ${workspaceFolder}/.vscode/chrome-debug-profile && sleep 2",
      "presentation": {
        "reveal": "never",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "wait-for-server",
      "type": "shell",
      "command": "until nc -z localhost 3001; do sleep 1; done",
      "presentation": {
        "reveal": "never"
      },
      "problemMatcher": []
    },
    {
      "label": "ensure-node-version",
      "type": "shell",
      "command": "source ~/.nvm/nvm.sh && nvm install 18 && nvm use 18 && node --version",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Development",
      "dependsOn": [
        "Start Client",
        "Start Server"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Start Client",
      "type": "shell",
      "command": "source $HOME/.nvm/nvm.sh && nvm use && cd client && yarn dev",
      "isBackground": true,
      "problemMatcher": {
        "owner": "client",
        "fileLocation": [
          "relative",
          "${workspaceFolder}/client"
        ],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error|info)\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^VITE.*started",
          "endsPattern": "^VITE.*ready"
        }
      }
    },
    {
      "label": "Start Server",
      "type": "shell",
      "command": "source $HOME/.nvm/nvm.sh && nvm use && cd server && yarn dev",
      "isBackground": true,
      "problemMatcher": {
        "owner": "server",
        "fileLocation": [
          "relative",
          "${workspaceFolder}/server"
        ],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error|info)\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    },
    {
      "label": "Run ESLint (Watch Mode)",
      "type": "shell",
      "command": "source $HOME/.nvm/nvm.sh && nvm use && ./run.sh lint-vscode",
      "isBackground": true,
      "problemMatcher": [
        {
          "owner": "eslint-client",
          "fileLocation": [
            "relative",
            "${workspaceFolder}"
          ],
          "pattern": [
            {
              "regexp": "^([^:]+):(\\d+):(\\d+):\\s+(warning|error)\\s+(.+)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Starting client linting in watch mode...",
            "endsPattern": "Watching for changes..."
          }
        },
        {
          "owner": "eslint-server",
          "fileLocation": [
            "relative",
            "${workspaceFolder}"
          ],
          "pattern": [
            {
              "regexp": "^([^:]+):(\\d+):(\\d+):\\s+(warning|error)\\s+(.+)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5
            }
          ]
        }
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "showReuseMessage": false,
        "clear": true,
        "focus": false
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Lint Whole Project",
      "type": "shell",
      "command": "source $HOME/.nvm/nvm.sh && nvm use && (cd client && yarn eslint --format unix src/) && (cd server && yarn eslint --format unix ./)",
      "problemMatcher": {
        "owner": "eslint",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": {
          "regexp": "^([^:]+):(\\d+):(\\d+):\\s+(warning|error)\\s+(.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "Start Development with Linting",
      "dependsOn": [
        "Start Client",
        "Start Server",
        "Run ESLint (Watch Mode)"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    },
    {
      "label": "wait-for-client",
      "type": "shell",
      "command": "mkdir -p ${workspaceFolder}/.vscode/chrome-debug-profile && until nc -z localhost 3000; do sleep 1; done",
      "presentation": {
        "reveal": "never"
      },
      "dependsOn": [
        "wait-for-server"
      ],
      "problemMatcher": []
    },
    {
      "label": "terminate-all",
      "type": "shell",
      "command": "pkill -f node || true && pkill -f Chrome || true && rm -rf ${workspaceFolder}/.vscode/chrome-debug-profile",
      "presentation": {
        "reveal": "never"
      },
      "problemMatcher": []
    }
  ]
}